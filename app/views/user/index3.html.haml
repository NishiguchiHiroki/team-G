.single-main
  %p.register-head お届け先住所入力

  .register-form
    .form.add
      %label{for: "name"} お名前
      %span.form-require 
      %input{type:"family_name", placeholder: "例）山田", class: 'form-input'}
      %input{type:"first_name", placeholder: "例）彩", class: 'form-input'}
    .form.add
      %label{for: "name_kana"} お名前カナ
      %span.form-require 
      %input{type:"family_name_kana", placeholder: "例）ヤマダ", class: 'form-input'}
      %input{type:"first_name_kana", placeholder: "例）アヤ", class: 'form-input'}
    .form
      %label{for: "postal_code"} 郵便番号
      %span.form-require 
      %input{type:"postal_code", class: "form-input", placeholder: "例）123-4567"}
    .form
      %label{for: "prefecture"} 都道府県
      %span.form-require 
      %input{type:"select", class: "form-input", placeholder: "北海道"}
    .form  
      %label{for: "city"} 市区町村
      %span.form-require 
      %input{type:"city", class: "form-input", placeholder: "例）横浜市緑区"}
    .form
      %label{for: "address"} 番地
      %span.form-require 
      %input{type:"adress", class: "form-input", placeholder: "例）青山1-1-1"}
    .form
      %label{for: "building"} 建物名
      %span.form-require-gray 
      %input{type:"building", class: "form-input", placeholder: "例）柳ビル103"}
    .form
      %label{for: "phone_number"} 携帯電話の番号
      %span.form-require-gray 
      %input{type: "phone_number", class: "form-input", autocomplete: "current-password", placeholder: "例）09012345678"}
    .form
      .next-btn
        %button{type:"submit",class:"btn-red"}
          登録する   
