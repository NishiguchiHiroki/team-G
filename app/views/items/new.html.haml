      .new-page__main__form.about-price
        .form-left
          %p 販売価格(300〜9,999,999)
          = link_to '#' do
            %i.fas.fa-question-circle
        .form-right
          .form-right-top
            %h1 価格
            %span 必須
            %p ¥
            %input{type: 'text', placeholder: '例) 300'}
          .form-right-middle
            %p 販売手数料(10%)
            %h2 -
          .form-right-bottom
            %h1 販売利益
            %p -
